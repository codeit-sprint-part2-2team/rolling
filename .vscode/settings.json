{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": true // 저장 시 가능한 모든 자동 수정을 시도
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2, // 들여쓰기 크기
  "editor.insertSpaces": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSaveMode": "modifications", // 변경된 부분만 포맷팅
  "prettier.requireConfig": true // Prettier 설정 파일이 있어야 포맷팅 적용
}
